<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProvectoLogia.Agendamento"
             BackgroundColor="#C5CAD1">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Voltar"
                    x:Name="button"
                    Margin="0,0,259,0"
                    BackgroundColor="#C5CAD1"
                    TextColor="Black"/>

            <Button Text="Agendar Horarios"
                    Margin="90,100,90,0"
                    BackgroundColor="#E7E9DF"
                    TextColor="Black"
                    x:Name="buttonAgendarHorario"
                    Clicked="ButtonAgendarHorario_Clicked"/>
            
            <Button Text="Agendar Guia Turistico"
                    TextColor="Red"
                    Margin="90,50,90,0"
                    BackgroundColor="#E7E9DF"
                    x:Name="buttonAgendarGuia"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>